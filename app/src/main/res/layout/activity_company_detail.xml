<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f6f6f6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#ffffff"
        android:id="@+id/rl0"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:textColor="@color/c_165ce8"
                android:text="参展企业简介"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp" />

        </LinearLayout>
        <TextView
            android:background="@drawable/bg_text_item_border"
            android:id="@+id/tv_des"
            android:layout_marginRight="20dp"
            android:text="这是企业简介这是企业简介这是企业简介这是企业简介这是企业简介这是企业简介这是企业简介这是企业简介这是企业简介"
            android:textColor="@color/c_165ce8"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_width="200dp"
            android:layout_height="90dp" />
    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@id/rl0"
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/iv_renzheng"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="100dp" />
            <TextView
                android:layout_gravity="center"
                android:text="平台认证展商"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:ems="1"
                android:text="我的视频"
                android:textColor="@color/c_165ce8"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--视频区域-->
            <android.support.v4.view.ViewPager
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/vp_video"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v4.view.ViewPager>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_below="@id/rl1"
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <com.youth.banner.Banner
                android:id="@+id/banner_canzhan"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="100dp" />
            <TextView
                android:layout_gravity="center"
                android:text="我的参展相册"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:ems="1"
                android:text="产品列表"
                android:textColor="@color/c_165ce8"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--banner区域-->
            <com.youth.banner.Banner
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/banner_products"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.youth.banner.Banner>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom_container"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="160dp">

    </RelativeLayout>
</RelativeLayout>