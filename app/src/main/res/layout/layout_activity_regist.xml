<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <RelativeLayout
     android:id="@+id/rl_phone"
     android:layout_marginTop="50dp"
     android:layout_width="match_parent"
     android:layout_height="50dp">
     <EditText
         android:layout_marginLeft="15dp"
         android:hint="手机号"
         android:id="@+id/et_phone"
         android:layout_width="245dp"
         android:layout_height="50dp" />
     <TextView
         android:textColor="#165ce8"
         android:layout_marginLeft="15dp"
         android:text="获取验证码"
         android:layout_centerVertical="true"
         android:layout_toRightOf="@id/et_phone"
         android:id="@+id/tv_yanzhengma"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
 </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_yanzhengma"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rl_phone"
        android:layout_width="345dp"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/et_yanzhengma"
            android:layout_marginLeft="15dp"
            android:hint="验证码"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rl_yanzhengma"
        android:layout_width="345dp"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/et_password"
            android:layout_marginLeft="15dp"
            android:hint="密码"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_check_password"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rl_password"
        android:layout_width="345dp"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/et_check_password"
            android:layout_marginLeft="15dp"
            android:hint="确认密码"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:id="@+id/rl_city"
        android:layout_width="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="10dp"
        android:layout_height="50dp"
        android:layout_below="@id/rl_check_password">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="请选择城市"
            android:drawablePadding="25dp"
            android:drawableRight="@mipmap/icon_back_down"
            android:textColor="#666666" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_login"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_below="@id/rl_city"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:background="#165ce8"
        android:textColor="#ffffff"
        android:text="完成注册"
        android:layout_width="200dp"
        android:layout_height="45dp" />
</RelativeLayout>